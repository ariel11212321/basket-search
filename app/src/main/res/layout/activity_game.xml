<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/yell"
    tools:context=".activities.ActivityGame">

    <TextView
        android:id="@+id/tvTeam1"
        android:layout_width="151dp"
        android:layout_height="44dp"
        android:layout_marginTop="124dp"
        android:layout_weight="1"
        android:fontFamily="sans-serif-black"
        android:text="TEAM 1"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/team1Spinner"
        android:layout_width="149dp"
        android:layout_height="49dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_choose_court" />

    <Spinner
        android:id="@+id/team2Spinner"
        android:layout_width="149dp"
        android:layout_height="49dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="148dp"
        app:layout_constraintStart_toEndOf="@+id/tvTeam1"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/tvTeam2"
        android:layout_width="151dp"
        android:layout_height="44dp"
        android:layout_marginStart="116dp"
        android:layout_marginTop="124dp"
        android:layout_weight="1"
        android:fontFamily="sans-serif-black"
        android:text="TEAM 2"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/tvTeam1"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_choose_court"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="60dp"
        android:text="choose court"
        android:backgroundTint="@color/brown"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_submit_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginTop="260dp"
        android:backgroundTint="@color/brown"
        android:text="SUBMIT"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTeam1" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="BASKET SEARCH - INVITE A COURT"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switchPrivate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="57dp"
        android:layout_marginTop="29dp"
        android:text="private "
        app:layout_constraintStart_toEndOf="@+id/btn_choose_court"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />
    <ImageButton
        android:id="@+id/btnBack1"
        android:layout_width="23dp"
        android:layout_height="28dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:background="@color/yell"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />
</androidx.constraintlayout.widget.ConstraintLayout>