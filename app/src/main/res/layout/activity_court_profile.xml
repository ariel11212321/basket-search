<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/yell"
    tools:context=".activities.profiles.ActivityCourtProfile">


    <TextView
        android:id="@+id/court_name"
        android:layout_width="264dp"
        android:layout_height="77dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:drawableLeft="@drawable/court"
        android:fontFamily="@font/sport2"
        android:gravity="center"
        android:textColor="@color/orange"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/btnBack1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/court_author"
        android:layout_width="408dp"
        android:layout_height="79dp"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/sport2"
        android:layout_marginTop="136dp"
        android:drawableLeft="@drawable/nameicon2"
        android:gravity="center"
        android:textColor="@color/orange"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/court_address"
        android:layout_width="401dp"
        android:layout_height="86dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="212dp"
        android:drawableLeft="@drawable/mapicon"
        android:fontFamily="@font/sport2"
        android:textColor="@color/orange"
        android:textSize="25dp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/court_website"
        android:layout_width="417dp"
        android:layout_height="90dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="296dp"
        android:drawableLeft="@drawable/websiteicon"
        android:fontFamily="@font/sport2"
        android:textColor="@color/orange"
        android:textSize="25dp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/court_phone"
        android:layout_width="408dp"
        android:layout_height="72dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="384dp"
        android:drawableLeft="@drawable/phcon"
        android:fontFamily="@font/sport2"
        android:textColor="@color/orange"
        android:textSize="25dp"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/court_description"
        android:layout_width="405dp"
        android:layout_height="55dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="456dp"
        android:textColor="@color/orange"
        android:fontFamily="@font/sport2"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/IVcourtProfilePicture"
        android:layout_width="117dp"
        android:layout_height="133dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_baseline_person_outline_24"
        app:layout_constraintStart_toEndOf="@+id/court_name"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BtnAcceptOrDecline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="2dp"
        android:backgroundTint="@color/red"
        android:visibility="invisible"
        android:text="accept / decline request"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/court_description"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/cstar4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/cstar3"
        app:layout_constraintTop_toBottomOf="@+id/court_name"
        app:srcCompat="@drawable/white_star" />

    <ImageView
        android:id="@+id/cstar5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/cstar4"
        app:layout_constraintTop_toBottomOf="@+id/court_name"
        app:srcCompat="@drawable/white_star" />

    <ImageView
        android:id="@+id/cstar3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/cstar2"
        app:layout_constraintTop_toBottomOf="@+id/court_name"
        app:srcCompat="@drawable/white_star" />

    <ImageView
        android:id="@+id/cstar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/cstar1"
        app:layout_constraintTop_toBottomOf="@+id/court_name"
        app:srcCompat="@drawable/white_star" />

    <ImageView
        android:id="@+id/cstar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/court_name"
        app:srcCompat="@drawable/white_star" />

    <TextView
        android:id="@+id/tvAway"
        android:layout_width="244dp"
        android:layout_height="56dp"
        android:layout_marginStart="4dp"
        android:text=" away from you"
        android:textColor="@color/black"
        android:textSize="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/court_description" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="171dp"
        android:layout_height="52dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="35dp"
        android:text="AVAILABLE"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        android:checked="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAway" />

    <ImageButton
        android:id="@+id/btnBack1"
        android:layout_width="23dp"
        android:layout_height="28dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="16dp"
        android:background="@color/yell"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />


</androidx.constraintlayout.widget.ConstraintLayout>